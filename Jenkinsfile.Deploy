// Uses Declarative syntax to run commands inside a container.
pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: "v1"
kind: "Pod"
spec:
  containers:
    image: "docker:dind"
    name: "docker"
    securityContext:
      privileged: true
    tty: true      
'''

            defaultContainer 'shell'
        }
    }
    stages {
        stage('Main') {
            steps {
                sh 'whoami'
            }
        }
    }
}
