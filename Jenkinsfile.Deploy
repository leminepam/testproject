// Uses Declarative syntax to run commands inside a container.
pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: shell
    image: docker:dind
    command:
    - sleep
    args:
    - infinity
'''

            defaultContainer 'shell'
        }
    }
    stages {
        stage('Main') {
            steps {
                sh 'echo hello'            }
        }
    }
}
